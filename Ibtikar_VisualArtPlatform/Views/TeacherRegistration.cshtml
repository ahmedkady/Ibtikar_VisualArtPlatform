@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.TeacherRegistration>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    var RegistraionVM = new Ibtikar_VisualArtPlatform.ViewModels.TeacherRegistrationViewModel();
    Layout = "Master.cshtml";
}


<section id="about" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6 col-sm-12">
                <div class="section-title">
                    <h1>@Model.Title</h1>
                </div>
            </div>
            <div class="col-md-offset-3 col-md-6 col-sm-12">
                <div class="section-title">
                    <h3>@Model.Subtitle</h3>
                </div>
            </div>
        </div>
        @using (Html.BeginUmbracoForm("RegisterTeacher", "Registraion"))
        {
            if (TempData["InvalidModelState"] != null)
            {
                <label style="color:red;">Please make sure to enter al required fields</label>
            }
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">@Model.FullName</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Name" id="" value="@RegistraionVM.Name" placeholder="@Model.FullName">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2 col-form-label">@Model.Age</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" value="@RegistraionVM.Age" name="Age" id="" placeholder="@Model.Age">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-auto my-1">
                    <label class="col-sm-2 col-form-label" for="inlineFormCustomSelect">@Model.Gender</label>
                    <select name="Gender" class="form-control col-sm-2 col-form-label" id="">
                        <option selected value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">@Model.Email</label>
                <div class="col-sm-10">
                    <input type="email" name="Email" value="@RegistraionVM.Email" class="form-control" id="" placeholder="@Model.Email">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">@Model.Password</label>
                <div class="col-sm-10">
                    <input type="password" name="Password" value="@RegistraionVM.Password" class="form-control" id="" placeholder="@Model.Password">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">@Model.School</label>
                <div class="col-sm-10">
                    <input type="text" name="School" value="@RegistraionVM.School" class="form-control" id="" placeholder="@Model.School">
                </div>
            </div>

            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">@Model.Resume</label>
                <div class="col-sm-10">
                    <input type="file" name="Resume" value="" class="form-control" id="" placeholder="@Model.Resume">
                </div>
            </div>

            @Html.Partial("Nationalities", Model)

            @*<div class="form-group row">
                <div class="col-sm-10">
                    <div class="form-check">
                        <input onclick="isBasedInUAEChecked(this)" class="form-check-input" type="checkbox" id="BasicRegistration-isUAE">
                        <input type="hidden" name="IsBasedInUae" id="registration-isUaeBasedCheck" />
                        <label class="form-check-label" for="gridCheck1">
                            @Model.CurrentLocation
                        </label>
                    </div>
                </div>
            </div>
            <div style="display:none;" id="Register-schoolsList" class="form-group row">
                <div class="col-auto my-1">
                    <label class="col-sm-2 col-form-label" for="inlineFormCustomSelect">@Model.School</label>
                    <select name="School" class="form-control col-sm-2 col-form-label" id="BasicRegistration-EmiratesList">
                        <option selected value="s1">school 1</option>
                        <option value="s2">school 2</option>
                    </select>
                </div>
            </div>*@
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Sign up</button>
                </div>
            </div>
        }
    </div>
</section>

