@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Registraion>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "Master.cshtml";
    string Culture = UmbracoContext.VariationContextAccessor.VariationContext.Culture;
    string LandRoute = Culture.ToLower().Contains("ar") ? "ar" : "en";
}
    <section id="about" data-stellar-background-ratio="0.5">
        <div class="container">
            <div class="row">

                <div class="col-md-offset-3 col-md-6 col-sm-12">
                    <div class="section-title">
                        <h1>@Model.Title</h1>
                    </div>
                </div>


                <div class="col-md-offset-3 col-md-6 col-sm-12">
                    <div class="section-title">
                        <h1>@Model.Subtitle</h1>
                    </div>
                </div>


            </div>
            <div class="col-sm-12 text-center">
                <button onclick="location.href='/@LandRoute/Student-registration/'" class="btn btn-primary btn-lg">@Model.Student</button>
                <button onclick="location.href='/@LandRoute/Teacher-registration/'" class="btn btn-danger btn-lg">@Model.Teacher</button>
                <button onclick="location.href='/@LandRoute/spectator-registration/'" class="btn btn-warning btn-lg">@Model.Spectator</button>
            </div>
        </div>
    </section>
