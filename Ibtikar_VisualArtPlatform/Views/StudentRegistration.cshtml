@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.StudentRegistration>
@using ContentModels = Umbraco.Web.PublishedModels;

@{
    Layout = "Master.cshtml";
    var RegistraionVM = new Ibtikar_VisualArtPlatform.ViewModels.StudentRegistrationViewModel();
    string Culture = UmbracoContext.VariationContextAccessor.VariationContext.Culture;

}
<!-- Start Log In Area -->
<section class="user-area-style ptb-100">
    <div class="container">
        <div class="registration-area">
            <div class="section-title">
                <h2>@Model.Title</h2>
            </div>

            <div class="contact-form-action">
                @using (Html.BeginUmbracoForm("RegisterStudent", "Registraion"))
                {
                    if (TempData["InvalidModelState"] != null)
                    {
                        <label style="color:red;">Please make sure to enter al required fields</label>
                    }
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <label>@Model.FullName</label>
                                <input class="form-control" type="text" name="Name" value="@RegistraionVM.Name">
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-group">
                                <label>@Model.Email</label>
                                <input class="form-control" type="email" name="Email" value="@RegistraionVM.Email">
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-group">
                                <label>@Model.Password</label>
                                <input class="form-control" type="password" name="Password" value="@RegistraionVM.Password">
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-group">
                                <label>@Model.Age</label>
                                <input class="form-control" type="text" name="Age" value="@RegistraionVM.Age">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label>@Model.BIO</label>
                                <input class="form-control" type="text" name="BIO" value="@RegistraionVM.BIO">
                            </div>
                        </div>
                        @*<div class="col-12">
                            <div class="form-group">
                                <label>@Model.School</label>
                                <input class="form-control" type="text" name="School" value="@RegistraionVM.School">
                            </div>
                        </div>*@
                        @Html.Partial("Nationalities", Model)
                        <div class="col-12">
                            <div class="form-group">
                                <label>@Model.Gender</label>
                                <select name="Gender" class="form-control" id="">
                                    @if (Culture.ToLower().Contains("ar"))
                                    {
                                        <option value="Male">ذكر</option>
                                        <option value="Female">أنثى</option>
                                    }
                                    else
                                    {
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <input type="checkbox" onclick="isBasedInUAEChecked(this)">
                            <input type="hidden" name="IsBasedInUae" value="false" id="registration-isUaeBasedCheck" />
                            <label for="">@Model.CurrentLocation</label>
                        </div>



                        <div class="col-12" style="display:none;" id="Register-schoolsList">
                            <div class="form-group">
                                <label>@Model.School</label>

                                @Html.Partial("~/Views/SchoolsList.cshtml")
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row align-items-center">
                                <div class="col-lg-6">
                                    <button class="default-btn register" type="submit">
                                        @Model.RegisterButton
                                    </button>
                                </div>
                            </div>
                        </div>

                        @*<div class="col-12">
                                <p>Have an account? <a href="log-in.html">Login Now!</a></p>
                            </div>*@
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- End Log In Area -->
