@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "Master.cshtml";
    var homepage = Model.AncestorOrSelf<ContentModels.Home>();
    var whoarewe = homepage.Children<ContentModels.WhoAreWe>().FirstOrDefault();
}

<!-- Start Page Title Area -->
<div class="page-title-area bg-5">
    <div class="container">
        <div class="page-title-content">
            <h2>@whoarewe.Name</h2>
            <ul>
                <li>
                    <a href="@Umbraco.AssignedContentItem.Parent.Url()">
                        @Umbraco.AssignedContentItem.Parent.Name
                    </a>
                </li>

                <li class="active">@Umbraco.AssignedContentItem.Name</li>
            </ul>

        </div>
    </div>
</div>

<section class="education-area ebeef5-bg-color">
    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-lg-6">
                <div class="education-img">
                    <img src="@whoarewe.Image" alt="Image">
                </div>
            </div>

            <div class="col-lg-6">
                <div class="education-content ptb-100">
                    <span class="top-title">@whoarewe.SmallTitle</span>
                    <h2>@whoarewe.MainTitle</h2>
                    <p>@whoarewe.Description</p>
                </div>
            </div>
        </div>
    </div>
</section>
