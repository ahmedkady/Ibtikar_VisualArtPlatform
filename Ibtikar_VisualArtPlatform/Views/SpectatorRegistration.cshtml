@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.SpectatorRegistration>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    Layout = "Master.cshtml";
}

<section id="about" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row">

            <div class="col-md-offset-3 col-md-6 col-sm-12">
                <div class="section-title">
                    <h1>@Model.Title</h1>
                </div>
            </div>


            <div class="col-md-offset-3 col-md-6 col-sm-12">
                <div class="section-title">
                    <h3>@Model.Subtitle</h3>
                </div>
            </div>


        </div>

        <form>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">@Model.FullName</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputEmail3" placeholder="@Model.FullName">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2 col-form-label">@Model.Age</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="" placeholder="@Model.Age">
                </div>
            </div>
            <fieldset class="form-group">
                <div class="row">
                    <label class="col-form-label col-sm-2 pt-0">@Model.Gender</label>
                    <div class="col-sm-10">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" id="" value="option1" checked>
                            <label class="form-check-label" for="gridRadios1">
                                Male
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" id="" value="option2">
                            <label class="form-check-label" for="gridRadios2">
                                Female
                            </label>
                        </div>
                    </div>
                </div>
            </fieldset>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">@Model.Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="inputEmail3" placeholder="@Model.Email">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-auto my-1">
                    <label class="col-sm-2 col-form-label" for="inlineFormCustomSelect">@Model.Education</label>
                    <select class="form-control col-sm-2 col-form-label" id="inlineFormCustomSelect">
                        <option selected>Choose...</option>
                        <option value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>
            </div>



            @Html.Partial("Nationalities",Model)

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Sign in</button>
                </div>
            </div>
        </form>
    </div>
</section>
