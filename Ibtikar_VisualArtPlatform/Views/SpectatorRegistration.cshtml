@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.SpectatorRegistration>
@using ContentModels = Umbraco.Web.PublishedModels;

@{
    Layout = "Master.cshtml";
    var RegistraionVM = new Ibtikar_VisualArtPlatform.ViewModels.RegistraionViewModel();
}

<section id="about" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row">

            <div class="col-md-offset-3 col-md-6 col-sm-12">
                <div class="section-title">
                    <h1>@Model.Title</h1>
                </div>
            </div>


            <div class="col-md-offset-3 col-md-6 col-sm-12">
                <div class="section-title">
                    <h3>@Model.Subtitle</h3>
                </div>
            </div>


        </div>
        @using (Html.BeginUmbracoForm("RegisterSpectator", "Registraion"))
        {
            if (TempData["InvalidModelState"] != null)
            {
                <label style="color:red;">Please make sure to enter al required fields</label>
            }
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">@Model.FullName</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Name" id="inputEmail3" value="@RegistraionVM.Name" placeholder="@Model.FullName">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2 col-form-label">@Model.Age</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" value="@RegistraionVM.Age" name="Age" id="" placeholder="@Model.Age">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-auto my-1">
                    <label class="col-sm-2 col-form-label" for="inlineFormCustomSelect">@Model.Gender</label>
                    <select name="Gender" class="form-control col-sm-2 col-form-label" id="inlineFormCustomSelect">
                        <option selected value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">@Model.Email</label>
                <div class="col-sm-10">
                    <input type="email" name="Email" value="@RegistraionVM.Email" class="form-control" id="inputEmail3" placeholder="@Model.Email">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">@Model.Password</label>
                <div class="col-sm-10">
                    <input type="password" name="Password" value="@RegistraionVM.Password" class="form-control" id="inputEmail3" placeholder="@Model.Email">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-auto my-1">
                    <label class="col-sm-2 col-form-label" for="inlineFormCustomSelect">@Model.Education</label>
                    <select name="Education" class="form-control col-sm-2 col-form-label" id="inlineFormCustomSelect">
                        <option selected value="1">One</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>
            </div>



            @Html.Partial("Nationalities", Model)

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">@Model.RegisterButton</button>
                </div>
            </div>
        }
    </div>
</section>
