@inherits Umbraco.Web.Mvc.UmbracoViewPage
@using ContentModels = Umbraco.Web.PublishedModels;


@* the fun starts here *@

@{ 
    var testimonialsContent = Model.Children<ContentModels.Testimonials>().FirstOrDefault();
    var testimonials = testimonialsContent.Children<ContentModels.Testimonial>();
}

<!-- Start Testimonials Area -->
<section class="feedback-area f5f6fa-bg-color ptb-100">
    <div class="container">
        <div class="section-title">
            <span>@testimonialsContent.TestimonailsTitle</span>
            <h2>@testimonialsContent.TestimonialsSubTitle</h2>
        </div>
        <div class="feedback-slider owl-theme owl-carousel">
            @foreach (var testimonial in testimonials)
            {
                <div class="feedback-item">
                    <i class="flaticon-quotation"></i>
                    <p>@testimonial.Description</p>

                    <div class="feedback-title">
                        <img src="@testimonial.AuthorPicture" alt="Image">
                        <h3>@testimonial.AuthorName</h3>
                        <span>@testimonial.AuthorJob</span>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- End Testimonials Area -->