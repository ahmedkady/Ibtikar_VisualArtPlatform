@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.IBasicRegistrationControls>
@using ContentModels = Umbraco.Web.PublishedModels;

<div class="form-group row">
    <div class="col-sm-10">
        <div class="form-check">
            <input onclick="isUAENationalityChecked(this)" class="form-check-input" type="checkbox" id="BasicRegistration-isUAE">
            <label class="form-check-label" for="gridCheck1">
                @Model.IsUaecitizen
            </label>
        </div>
    </div>
</div>
<div class="form-group row">
    <div class="col-auto my-1">
        <label class="col-sm-2 col-form-label" for="inlineFormCustomSelect">@Model.Nationality</label>
        <select style="display:none;" class="form-control col-sm-2 col-form-label" id="BasicRegistration-EmiratesList">
            <option selected>Choose...</option>
            <option value="1">Dubai</option>
            <option value="2">el sharka</option>
        </select>
        <select class="form-control col-sm-2 col-form-label" id="BasicRegistration-WorldList">
            <option selected>Choose...</option>
            <option value="1">Egypt</option>
            <option value="2">USA</option>
        </select>
    </div>
</div>
